<p id="notice"><%= notice %></p>

<h1>登録者一覧</h1>

<%= link_to "終了期限でソートする", tasks_path(sort_expired: true) %>
<br>
<%= link_to "優先順位でソートする", tasks_path(sort_priority: true) %>

<%= form_with(model: Task.new, method: :get, local: true, url: tasks_path) do |f| %>
<br>
  <%= f.label :title_search, "タイトル検索" %>
  <%= f.text_field :title_search, class:'form-control'%>
  <%= f.hidden_field :search, value: 'true' %>
  <br>
  <%= f.submit '検索する', class: 'btn btn-info' %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= t('view.title') %></th>
      <th><%= t('view.content') %></th>
      <th><%= t('view.deadline') %></th>
      <th><%= t('view.status') %></th>
      <th><%= t('view.priority') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr id='task_row'>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
<br>
<%= link_to 'New task', new_task_path, class: 'btn btn-info' %>
