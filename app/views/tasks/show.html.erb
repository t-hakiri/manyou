<h1>タスク</h1>

<p>
  <strong>タイトル:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>詳細:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>終了期限:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong>ステータス:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>優先順位:</strong>
  <%= @task.priority %>
</p>

<p>
  <% if @task.labels.present? %>
    <strong>ラベル</strong>
    <% @task.labels.each do |label| %>
      <p class='badge badge-primary'><%= label.name %></p>
    <% end %>
  <% end %>
</p>

<%= link_to '設定変更', edit_task_path(@task), class: 'btn btn-success' %> |
<%= link_to '戻る', tasks_path, class: 'btn btn-warning' %> 
