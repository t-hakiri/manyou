<h1>管理者画面のユーザ一覧</h1>
<br>

<table>
  <thead>
    <tr>
      <th>admin</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.admin %></td>
        <td><%= user.id %>:<%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to '権限付与', admin_user_path(user, user: {admin: true}), method: :patch,data: { confirm: '管理者権限を付与しますか?' } %></td>
        <%#= link_to "リンクです。", kobito_path, user_id: @user.id, user_name: @user.name %>
      </tr>
    <% end %>
  </tbody>
</table>

